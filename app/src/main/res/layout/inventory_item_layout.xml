<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/inventory_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/inventory_placeholder"
        android:contentDescription="Inventory Image" />

    <TextView
        android:id="@+id/inventory_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Inventory Name" />

    <TextView
        android:id="@+id/inventory_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:text="Quantity: 0" />

    <TextView
        android:id="@+id/inventory_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:text="Description" />

</LinearLayout>
